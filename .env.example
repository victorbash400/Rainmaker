# Database - TiDB Serverless Configuration
# Option 1: Use full connection string
TIDB_URL=mysql+aiomysql://user:password@gateway01.us-west-2.prod.aws.tidbcloud.com:4000/rainmaker?ssl=true

# Option 2: Use individual components (will override TIDB_URL if provided)
TIDB_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-tidb-username
TIDB_PASSWORD=your-tidb-password
TIDB_DATABASE=rainmaker

# For local development, use SQLite
# TIDB_URL=sqlite+aiosqlite:///./rainmaker.db

REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key-here
SONAR_API_KEY=pplx-your-sonar-api-key-here
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
CLEARBIT_API_KEY=pk_your-clearbit-api-key-here
GOOGLE_CALENDAR_CREDENTIALS={"type": "service_account", "project_id": "your-project"}
LINKEDIN_API_KEY=77your-linkedin-api-key-here

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=rainmaker-files

# Feature Flags
ENABLE_AUTOMATIC_OUTREACH=false
REQUIRE_HUMAN_APPROVAL=true

# Rate Limiting
MAX_PROSPECTS_PER_DAY=50
MAX_OUTREACH_PER_HOUR=25

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Development
DEBUG=true
LOG_LEVEL=INFO