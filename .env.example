# Database - TiDB Serverless Configuration
TIDB_HOST=gateway01.region.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your_tidb_username
TIDB_PASSWORD=your_tidb_password
TIDB_DATABASE=your_database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External APIs
SONAR_API_KEY=pplx-your-actual-sonar-api-key-here
OPENAI_API_KEY=sk-your-actual-openai-api-key-here
SENDGRID_API_KEY=SG.your-actual-sendgrid-api-key-here
CLEARBIT_API_KEY=pk_your_actual_clearbit_api_key_here
GOOGLE_CALENDAR_CREDENTIALS={"type": "service_account", "project_id": "your_project_id", "private_key_id": "your_private_key_id", "private_key": "your_private_key", "client_email": "your_client_email", "client_id": "your_client_id", "auth_uri": "https://accounts.google.com/o/oauth2/auth", "token_uri": "https://oauth2.googleapis.com/token"}
LINKEDIN_API_KEY=your_linkedin_api_key_here

# Email Configuration
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_email_password
SMTP_SERVER=smtp.your_email_provider.com
IMAP_SERVER=imap.your_email_provider.com
TEST_RECIPIENT_EMAIL=test_recipient@example.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/your/service_account_file.json

# Feature Flags
ENABLE_AUTOMATIC_OUTREACH=false
REQUIRE_HUMAN_APPROVAL=true

# Rate Limiting
MAX_PROSPECTS_PER_DAY=50
MAX_OUTREACH_PER_HOUR=25

# Security
SECRET_KEY=your_very_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Development
DEBUG=true
LOG_LEVEL=INFO